{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "declarationMap": false,
    "outDir": "dist",
    "declaration": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["ES2015"]
  },
  "include": ["src/**/*", "scripts"],
  "exclude": ["node_modules", "test", "dist", "benchmark"]
}
