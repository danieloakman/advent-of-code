{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "declaration": true,
    "alwaysStrict": true,
    "checkJs": false,
    "allowJs": true,
    "declarationMap": false,
    "lib": ["ES2015"]
  },
  "include": ["src/**/*", "scripts"],
  "exclude": ["node_modules", "test", "dist", "benchmark"]
}
