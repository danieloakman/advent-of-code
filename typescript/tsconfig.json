{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "sourceMap": false,
    "declarationMap": false,
    "outDir": "dist",
    "declaration": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["ES2015"],
    "paths": {
      "@lib/*": ["./src/lib/*"],
      "@lib": ["./src/lib/index.ts"]
    },
    "types": ["vitest/importMeta"]
  },
  "include": ["src/**/*", "scripts"],
  "exclude": ["node_modules", "test", "dist", "benchmark"]
}
